modules = ["flutter"]

[nix]
channel = "stable-24_05"
packages = ["wget"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "flutter_demo"

[[workflows.workflow]]
name = "Flutter App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flutter pub get && cd example && flutter run -d web-server --web-port 5000 --web-hostname 0.0.0.0"
waitForPort = 5000

[[workflows.workflow]]
name = "flutter_demo"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd example && flutter run -d web"

[deployment]
run = ["sh", "-c", "flutter pub get && cd example && flutter run -d web-server --web-port 5000 --web-hostname 0.0.0.0"]
